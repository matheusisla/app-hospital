<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TelaInicial">

    <Button
            android:text="ENFERMEIROS"
            android:layout_width="159dp"
            android:layout_height="0dp"
            android:id="@+id/botaoEnfermeiros"
            android:textSize="18sp"
            android:background="@color/colorPrimary" style="@style/Widget.AppCompat.Button" android:textColor="#FFF"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/botaoLimpeza"
            android:layout_marginTop="261dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Limpeza"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/botaoLimpeza" android:paddingBottom="16dp"
            android:paddingLeft="4dp" android:paddingRight="16dp" android:paddingTop="16dp"
            android:background="@color/colorPrimary" android:autoText="false" android:textColor="#FFF"
            android:textSize="18sp" style="@style/Widget.AppCompat.Button" android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@+id/botaoEnfermeiros" android:layout_marginBottom="80dp"
            app:layout_constraintEnd_toEndOf="@+id/botaoEnfermeiros"
            app:layout_constraintStart_toStartOf="@+id/botaoEnfermeiros"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>